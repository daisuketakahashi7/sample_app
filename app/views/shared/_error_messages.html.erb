<%# フォーム送信時にエラーメッセージを表示するためのパーシャル %>
<% if @user.errors.any? %> <%# エラーが存在するのか %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%#　countでエラーの数を返す %>
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>